@model RosondFleetManager.Models.Vehicle

@{
    ViewBag.Title = "Vehicle Details";
}

<h2>Vehicle Details</h2>

<div class="form-horizontal p-3 border rounded shadow-sm bg-white">

    <div class="form-group mb-3">
        <label class="control-label">Make</label>
        <p class="form-control-plaintext">@Model.Make</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Model</label>
        <p class="form-control-plaintext">@Model.Model</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Year</label>
        <p class="form-control-plaintext">@Model.Year</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">VIN</label>
        <p class="form-control-plaintext">@Model.VIN</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Supplier</label>
        <p class="form-control-plaintext">@(Model.Supplier?.Name ?? "N/A")</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Branch</label>
        <p class="form-control-plaintext">@(Model.Branch?.Name ?? "N/A")</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Client</label>
        <p class="form-control-plaintext">@(Model.Client?.Name ?? "N/A")</p>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Driver</label>
        <p class="form-control-plaintext">@(Model.Driver?.Name ?? "N/A")</p>
    </div>

    <div class="form-group text-end">
        @Html.ActionLink("Edit", "Edit", new { id = Model.VehicleId }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
