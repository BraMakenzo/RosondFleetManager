@model RosondFleetManager.Models.ReportViewModel

@{
    ViewBag.Title = "Vehicle Summary Report";
}

<div class="container mt-4">
    <h2 class="mb-4">Vehicle Summary Report</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-primary text-white">
                    Vehicles per Supplier
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.VehiclesPerSupplier)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@item.Group</span>
                            <span class="badge bg-primary rounded-pill">@item.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-success text-white">
                    Vehicles per Branch
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.VehiclesPerBranch)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@item.Group</span>
                            <span class="badge bg-success rounded-pill">@item.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-info text-white">
                    Vehicles per Client
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.VehiclesPerClient)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@item.Group</span>
                            <span class="badge bg-info rounded-pill">@item.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    Vehicles per Manufacturer
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.VehiclesPerManufacturer)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@item.Group</span>
                            <span class="badge bg-warning rounded-pill text-dark">@item.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Back to Home", "Index", "Home", new { }, new { @class = "btn btn-secondary" })
    </div>
</div>
