@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">Contact Rosond Fleet Management</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4><i class="fas fa-map-marker-alt"></i> Johannesburg Office</h4>
                    <address class="mt-3">
                        <strong>Rosond (Pty) Ltd</strong><br>
                        16 Impala Road<br>
                        Chislehurston, Sandton<br>
                        Johannesburg, 2196<br>
                        South Africa
                    </address>

                    <h4 class="mt-4"><i class="fas fa-phone"></i> Contact Numbers</h4>
                    <p>
                        <strong>Tel:</strong> +27 11 781 0770<br>
                        <strong>Emergency:</strong> +27 82 926 5432
                    </p>
                </div>
                <div class="col-md-6">
                    <h4><i class="fas fa-clock"></i> Operating Hours</h4>
                    <ul class="list-unstyled mt-3">
                        <li><strong>Mon-Fri:</strong> 7:30 AM - 4:30 PM</li>
                        <li><strong>Sat:</strong> 8:00 AM - 12:00 PM</li>
                        <li><strong>Sun:</strong> Closed</li>
                    </ul>

                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle"></i> 24/7 emergency support available for active fleet issues
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

