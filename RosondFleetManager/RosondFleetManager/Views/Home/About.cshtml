@{
    ViewBag.Title = "About Us";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0"><i class="fas fa-truck mr-2"></i>About Our Fleet Solutions</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="p-4">
                        <h3 class="text-primary"><i class="fas fa-bullseye mr-2"></i>Our Commitment</h3>
                        <p class="lead">
                            Delivering exceptional fleet management solutions through innovative technology and
                            industry-leading expertise.
                        </p>

                        <div class="mt-4">
                            <h4><i class="fas fa-cogs mr-2 text-info"></i>Core Capabilities</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Comprehensive vehicle tracking</li>
                                <li class="list-group-item">Maintenance optimization</li>
                                <li class="list-group-item">Driver performance analytics</li>
                                <li class="list-group-item">Fuel efficiency management</li>
                                <li class="list-group-item">Regulatory compliance</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-4">
                        <h3 class="text-primary"><i class="fas fa-chart-line mr-2"></i>Our Methodology</h3>
                        <div class="approach-steps mt-4">
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0 text-primary mr-3">
                                    <i class="fas fa-search fa-2x"></i>
                                </div>
                                <div>
                                    <h5>Comprehensive Analysis</h5>
                                    <p>Detailed assessment of your fleet operations and requirements</p>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0 text-primary mr-3">
                                    <i class="fas fa-sliders-h fa-2x"></i>
                                </div>
                                <div>
                                    <h5>Custom Configuration</h5>
                                    <p>Tailored solutions matching your specific business needs</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="flex-shrink-0 text-primary mr-3">
                                    <i class="fas fa-sync-alt fa-2x"></i>
                                </div>
                                <div>
                                    <h5>Continuous Improvement</h5>
                                    <p>Ongoing optimization based on performance data</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h3 class="text-center mb-4"><i class="fas fa-shield-alt mr-2"></i>Why Choose Us</h3>
                <div class="row text-center">
                    <div class="col-md-3 mb-4">
                        <div class="value-icon mx-auto">
                            <i class="fas fa-clock fa-3x text-primary"></i>
                        </div>
                        <h4 class="mt-2">24/7 Support</h4>
                        <p>Round-the-clock assistance for your fleet operations</p>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="value-icon mx-auto">
                            <i class="fas fa-lock fa-3x text-success"></i>
                        </div>
                        <h4 class="mt-2">Data Security</h4>
                        <p>Enterprise-grade protection for your sensitive data</p>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="value-icon mx-auto">
                            <i class="fas fa-rocket fa-3x text-warning"></i>
                        </div>
                        <h4 class="mt-2">Rapid Deployment</h4>
                        <p>Quick implementation with minimal downtime</p>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="value-icon mx-auto">
                            <i class="fas fa-graduation-cap fa-3x text-info"></i>
                        </div>
                        <h4 class="mt-2">Expert Team</h4>
                        <p>Certified professionals with industry experience</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>