@model RosondFleetManager.Models.ReportViewModel
@{
    ViewBag.Title = "Vehicle Report";
}

<div class="container">
    <h2 class="text-center mb-4">Vehicle Report</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Vehicles per Supplier</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr><th>Supplier</th><th>Count</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.VehiclesPerSupplier)
                    {
                        <tr><td>@item.Group</td><td>@item.Count</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h3 class="card-title mb-0">Vehicles per Branch</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr><th>Branch</th><th>Count</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.VehiclesPerBranch)
                    {
                        <tr><td>@item.Group</td><td>@item.Count</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h3 class="card-title mb-0">Vehicles per Client</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr><th>Client</th><th>Count</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.VehiclesPerClient)
                    {
                        <tr><td>@item.Group</td><td>@item.Count</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <h3 class="card-title mb-0">Vehicles per Manufacturer</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr><th>Make</th><th>Count</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.VehiclesPerManufacturer)
                    {
                        <tr><td>@item.Group</td><td>@item.Count</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>