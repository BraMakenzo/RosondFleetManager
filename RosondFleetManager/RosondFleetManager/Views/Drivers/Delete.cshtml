@model RosondFleetManager.Models.Driver

@{
    ViewBag.Title = "Delete Driver";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2>Delete Driver</h2>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this driver?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">License Number</dt>
                <dd class="col-sm-9">@Model.LicenseNumber</dd>
            </dl>

            @using (Html.BeginForm("Delete", "Drivers", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.DriverId)

                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
            }
        </div>
    </div>
</div>
